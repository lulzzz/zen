{
  "name": "origami-zen",
  "version": "0.3.13",
  "description": "Collection of reusable web components. Built for Origami CMS.",
  "repository": "https://github.com/origami-cms/zen",
  "author": "Tristan Matthias <hello@tristanmatthias.com>",
  "license": "MIT",
  "main": "zen.js",
  "typings": "zen.d.ts",
  "scripts": {
    "start": "yarn watch & yarn serve",
    "watch:sass": "yarn build:sass -- -w",
    "watch": "webpack-cli --mode=development -w & yarn watch:sass",
    "serve": "http-server dist/",
    "lint": "tslint -p . --fix",
    "build": "yarn build:sass; webpack-cli --mode=production; yarn build:definition; yarn build:api & yarn build:util",
    "build:sass": "sass-render packages/**/*.scss --suffix=-css.ts",
    "build:definition": "cp packages/zen.d.ts ./zen.d.ts",
    "build:api": "tsc packages/lib/API/index.ts --outDir ./API -d --target es2016",
    "build:util": "tsc packages/util/index.ts --outDir ./util -d --target es2016"
  },
  "devDependencies": {
    "@polymer/lit-element": "^0.5.1",
    "@types/lodash": "^4.14.109",
    "@types/redux": "^3.6.0",
    "@types/seamless-immutable": "^7.1.1",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "awesome-typescript-loader": "^5.0.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "email-validator": "^2.0.4",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-webpack-plugin": "^3.2.0",
    "http-status-codes": "^1.3.0",
    "lit-html": "^0.10.0",
    "lodash": "^4.17.10",
    "node-sass": "^4.9.0",
    "origami-icons": "^0.0.11",
    "polymer3-decorators": "https://github.com/tristanMatthias/polymer-decorators.git",
    "pwa-helpers": "^0.8.2",
    "raw-loader": "^0.5.1",
    "redux": "^4.0.0",
    "sass-loader": "^7.0.1",
    "seamless-immutable": "^7.1.3",
    "svg-inline-loader": "^0.8.0",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "tslint-config-origami": "^1.0.3",
    "typescript": "^2.8.4",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4",
    "zen-css": "^1.1.10"
  }
}
