{
  "include": [
    "./packages/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "es5",
      "es6",
      "es2015.symbol",
      "es2015.promise",
      "dom",
      "es2017.object",
      "es2016.array.include"
    ],
    "module": "es6",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "util/decorators": [
        "./packages/util/decorators"
      ],
      "lib/*": [
        "./packages/lib/*"
      ]
    }
  }
}
